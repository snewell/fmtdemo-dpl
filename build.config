[DEFAULT]
build = cmake
scm = git

[fmtlib]
git.uri = https://github.com/fmtlib/fmt
git.revision = 5.2.1
build.artifact_paths =
    cmake_path=fmt-targets.cmake
dep_args =
    -Dfmt_DIR=${dp.build.artifact_path.cmake_path}

[fmtdemo]
git.uri = https://github.com/snewell/fmtdemo
no_install =
depends =
    fmtlib
cmake.args =
    ${fmtlib:dep_args}
